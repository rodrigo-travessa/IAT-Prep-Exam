@model Quizz

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Quizz</h1>
<hr />
<div class="row col-12">
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfStudent" class="control-label"></label>
                <input asp-for="NameOfStudent" class="form-control" />
                <span asp-validation-for="NameOfStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfQuestions" class="control-label"></label>
                <input asp-for="NumberOfQuestions" class="form-control" />
                <span asp-validation-for="NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="row">
                <input type="submit" class="btn btn-primary form-control col-6" vlaue="Criar Simulado"/>
                <a asp-action="Index" class="btn btn-secondary form-control col-6">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
